generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Recipe {
  id          Int      @id @default(autoincrement())
  title       String   // Yêu cầu 1: Title (Required)
  ingredients String   // Yêu cầu 1: Ingredients (Required, multiline)
  tags        String[] @default([]) // Yêu cầu 1: Tags (Optional, list)
  imageUrl    String?  // Yêu cầu 1: Image (Optional)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}